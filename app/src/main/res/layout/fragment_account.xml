<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_accountt"
    android:padding="5dp"
    tools:context=".AccountFragment">

    <LinearLayout
        android:id="@+id/linear_layout_account_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="3dp">

        <ImageView
            android:id="@+id/image_view_account"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:src="@mipmap/ic_launcher_round" />

        <TextView
            android:id="@+id/text_view_name_account"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="2dp"
            android:text="Kal Kausar"
            android:textColor="#fff"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/text_view_email_account"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="2dp"
            android:text="kalkausar98@gmail.com"
            android:textColor="#fff"
            android:textSize="20dp" />

    </LinearLayout>


</RelativeLayout>