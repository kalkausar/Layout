<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    tools:context=".HotelActivity">

    <LinearLayout
        android:id="@+id/relative_layout_contruction_hotel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageView_hotel"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_centerInParent="true"
            android:foregroundGravity="center_vertical"
            android:src="@drawable/recontruction" />

        <TextView
            android:id="@+id/textview_title_Hotel"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_below="@+id/imageView_detail"
            android:text="@string/hotel_belum_tersedia"
            android:textSize="20dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textview_desc_hotel"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_below="@+id/imageView_detail"
            android:text="@string/contruction"
            android:textSize="20dp" />
    </LinearLayout>

</RelativeLayout>